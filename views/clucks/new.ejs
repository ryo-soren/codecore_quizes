<%- include('../partials/header') %>
<% if (username) { %> 
    <div class="card m-3 d-flex">
        <div class="card-body">
            <form action="/clucks" method="POST">
            <div class="form-group">
                <label class="mb-2 text-secondary" for="content">Content</label>
                <textarea
                required
                name="content" 
                type="text" 
                class="form-control" 
                rows="5"
                placeholder="Watchoo cluckin' 'bout?"></textarea>
            </div>

            <div class="form-group">
                <label class="my-2 text-secondary" for="image_url"> Image Url</label>
                <input
                type="url"
                class="form-control"
                name="image_url"
                placeholder="e.g. http://image.com/myPic.jpg"
                />
            </div>
            <div class=" mt-3 d-flex flex-row-reverse">
                <button type="submit" class="px-5 btn btn-outline-secondary">Cluck!</button>
            </div>
            </form>
        </div>
    </div>
<%} else { %>
    <div class="card m-3 d-flex">
        <div class="card-body">
            <h5>Please enter a username to proceed</h5>
            <form action="/sign_in_new" method="POST">
            <div class="form-group">
                <label class="my-2 text-secondary" for="username"> Username</label>
                <input
                required
                type="text"
                class="form-control"
                name="username"
                placeholder="e.g. Joe Smith"
                />
            </div>
            <div class=" mt-3 d-flex flex-row-reverse">
                <button type="submit" class="px-5 btn btn-outline-secondary">Sign In</button>
            </div>
            </form>
        </div>
      </div>
<% } %> 

<%- include('../partials/footer') %>